{% extends 'base.html.twig' %}

{% block s %}
    <title>Espace Restaurants</title>
{% endblock %}

{% block body %}
<main>
    <section class="section section-divider white blog" id="blog">
        <div class="container">
        <!-- Ajouter le formulaire de recherche -->
           

            <h4 class="section-subtitle">Derniers Restaurants </h4>
            <h2 class="h2 section-title text-center" style="background: linear-gradient(45deg, #DC0101, #8B0303); color: white; padding: 10px;">Espace<span class="span">Restaurants</span></h2>
            <h2 class="section-text">Découvrez les derniers restaurants ajoutés.</h2>
             <form action="{{ path('sort') }}" method="GET">
    <div class="form-group">
        <label for="place">Place:</label>
        <input type="text" id="place" name="place" class="form-control" placeholder="Entrez la place">
    </div>
    <button type="submit" class="btn btn-primary">Trier par place</button>
</form>
            <div class="row">
                {% for restaurant in restaurants %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="{{ asset('uploads/images/' ~ restaurant.image) }}" class="card-img-top" alt="{{ restaurant.nom }}">
                            <div class="card-body">
                                <h5 class="card-title text-center">{{ restaurant.nom }}</h5>
                                <p class="card-text">Specialité: {{ restaurant.speciality }}</p>
                                <p class="card-text">Téléphone: {{ restaurant.telephone }}</p>
                                <p class="card-text">Lieu: {{ restaurant.place }}</p>
                                <p class="card-text">Note: {{ restaurant.rate }}</p>
                                <a href="{{ path('app_restau_show', {'id': restaurant.id}) }}" class="btn btn-primary">Voir plus</a>
                                <a href="{{ path('app_restau_edit', {'id': restaurant.id}) }}" class="btn btn-secondary">Éditer</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-md-12">
                        <p>Aucun enregistrement trouvé</p>
                    </div>
                {% endfor %}
            </div>
<form action="{{ path('app_restau_scan_qr') }}" method="GET">
    <input type="text" name="qr_data" placeholder="Entrez les données du code QR" required>
    <button type="submit">Scanner le code QR</button>
</form>
       

      <div class="new">
         <a href="{{ path('app_restau_search') }}">Chercher le restaurant</a>
          </div>
         <div class="new">
         <a href="{{ path('app_restau_new') }}">Create new</a>
        
          </div>
    </section>
</main>

<style>
.container{
     text-align: center;
}

    .restaurant-image-container {
        height: 500px; 
        weight: 200px/* Adjust the height as needed */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .restaurant-image-container img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
{% endblock %}