{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .error-message{
            display: none;
            color: #dc3545;
        }

        .input-error{
            border: 1px solid #dc3545 !important;
        }

        .vich-image{
            width:100%;
        }
    </style>
{% endblock %}


{% block header %}

{% endblock %}

{% block body %}


    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Update/</span> User</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Modifier les informations de l'utilisateur</h5>
                        <small class="text-muted float-end">Merged input group</small>
                    </div>





                    <div class="card-body">
                        {{ form_start(userform, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label" for="basic-icon-default-fullname">Nom</label>
                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-nom" class="input-group-text"><i class="bx bx-user"></i></span>
                                            {{ form_widget(userform.nom, { 'attr' : { 'class' : 'form-control' } }) }}
                                        </div>
                                        <p style="display: none" id="error-nom" class="invalid-feedback"></p>
                                    </div>
                                    <div class="col">
                                        <label class="form-label" for="basic-icon-default-fullname">Prenom</label>
                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-prenom" class="input-group-text"><i class="bx bx-user"></i></span>
                                            {{ form_widget(userform.prenom, { 'attr' : { 'class' : 'form-control' } }) }}
                                        </div>
                                        <p style="display: none" id="error-prenom" class="invalid-feedback"></p>
                                    </div>
                                </div>

                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-company">Email</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-email" class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    {{ form_widget(userform.email, { 'attr' : { 'class' : 'form-control' } }) }}
                                    <span id="basic-icon-default-email" class="input-group-text"></span>
                                </div>
                                <p style="display: none" id="error-email" class="invalid-feedback"></p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-company"></label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-email" class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    {{ form_widget(userform.roles, { 'attr' : { 'class' : 'form-control' } }) }}
                                    <span id="basic-icon-default-email" class="input-group-text"></span>
                                </div>
                                <p style="display: none" id="error-email" class="invalid-feedback"></p>
                            </div>


                        {{ form_widget(userform.submit, { 'attr' : { 'class' : 'btn btn-primary' } }) }}

                        {{ form_end(userform) }}
                    </div>


                </div>
            </div>
        </div>
    </div>










{% endblock %}

{% block footer %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/sweetalert2@11.js') }}"></script>
    <script>
        {% if sameEmail is defined %}
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: "Cet e-mail est déjà pris.",
        })
        {% endif %}



        {% if errors|length > 0  %}
        {% for error in errors %}
        document.getElementById("update_{{ error.propertyPath }}").classList.add('input-error')
        document.getElementById("basic-icon-default-{{ error.propertyPath }}").classList.add('input-error')
        document.getElementById("error-{{ error.propertyPath }}").style.display = "block"
        document.getElementById("error-{{ error.propertyPath }}").innerText = "{{ error.message|raw }}"
        {% endfor %}
        {% endif %}
    </script>


{% endblock %}