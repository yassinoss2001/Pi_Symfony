{% extends 'backg.html.twig' %}

{% block css %}
    {{ parent() }}
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .buttons {
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block title %}Informations sur l'évènement{% endblock %}

{% block body %}
    <h1>Informations sur l'évènement</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom de l'évènement</th>
                <td>{{ evennemnt.nomEvent }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evennemnt.descEvent }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ evennemnt.dateDebut ? evennemnt.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ evennemnt.dateFin ? evennemnt.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evennemnt.lieuEvenement }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>{{ evennemnt.NbrParticipants }}</td>
            </tr>
            <tr>
                <th>Heure de début</th>
                <td>{{ evennemnt.TimeDebut ? evennemnt.TimeDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ evennemnt.TimeFin ? evennemnt.TimeFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom du restaurant</th>
                <td>{{ evennemnt.NameResto }}</td>
            </tr>
            <tr>
                <th>Chemin de l'image</th>
                <td>{{ evennemnt.imagePath }}</td>
            </tr>
        </tbody>
    </table>

    <div class="buttons">
        <a href="{{ path('app_evennemnt_index') }}" class="btn">Retour à la liste</a>
        <a href="{{ path('app_evennemnt_edit', {'id': evennemnt.id}) }}" class="btn">Éditer</a>
        {{ include('evennemnt/_delete_form.html.twig') }}
    </div>
{% endblock %}
