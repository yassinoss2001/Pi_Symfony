{% extends 'backg.html.twig' %}

{% block css %}
    {{ parent() }}
    <style>
        .card-banner {
            width: 200px; /* Adjust width as needed */
            height: auto; /* Let the height adjust according to image aspect ratio */
            border: 1px solid #ccc; /* Add border to create a frame */
            border-radius: 8px; /* Rounded corners for the card */
            overflow: hidden; /* Ensure image stays within the card */
            margin: 0 auto; /* Center the card horizontally */
        }

        .card-banner img {
            display: block; /* Make sure the image fills the card properly */
            width: 100%; /* Ensure the image takes the full width of the card */
            height: auto; /* Let the height adjust according to image aspect ratio */
        }

        table {
            margin-top:30px;
            width: 60%;
            border-collapse: collapse;
            border-spacing: 0;
            text-align: center;
            margin-left:20%;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .buttons {
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn i {
            margin-right: 5px; /* Adjust the spacing between the icon and text */
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block title %}Informations sur l'évènement{% endblock %}

{% block body %}
    <h1>Informations sur l'évènement</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom de l'évènement</th>
                <td>{{ evennemnt.nomEvent }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evennemnt.descEvent }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ evennemnt.dateDebut ? evennemnt.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ evennemnt.dateFin ? evennemnt.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evennemnt.lieuEvenement }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>{{ evennemnt.NbrParticipants }}</td>
            </tr>
            <tr>
                <th>Heure de début</th>
                <td>{{ evennemnt.TimeDebut ? evennemnt.TimeDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ evennemnt.TimeFin ? evennemnt.TimeFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom du restaurant</th>
                <td>{{ evennemnt.NameResto }}</td>
            </tr>
            <tr>
                <th>l'image</th>
                <td>
                    <div class="card-banner">
                        <img src="{{ asset('uploads/images/' ~ evennemnt.image_path) }}" width="60" height="39" loading="lazy"  class="w-100">
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="buttons">
        <a href="{{ path('app_evennemnt_index') }}" class="btn"><i class="fas fa-list"></i> Retour à la liste</a>
        <a href="{{ path('app_evennemnt_edit', {'id': evennemnt.id}) }}" class="btn"><i class="fas fa-edit"></i> Éditer</a>
        {{ include('evennemnt/_delete_form.html.twig') }}
    </div>
{% endblock %}
