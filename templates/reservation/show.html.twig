{% extends 'backg.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <h1 style="text-align: center; margin-top: 20px; margin-bottom: 20px;">Réservation</h1>

    <div style="margin: 0 auto; width: 60%;"> <!-- Div pour centrer et limiter la largeur -->
        <table class="table" style="border: 1px solid #ccc; border-collapse: collapse;">
            <tbody>
                <tr>
                    <th style="border: 1px solid #ccc;">Identifiant</th>
                    <td style="border: 1px solid #ccc;">{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th style="border: 1px solid #ccc;">Date de réservation</th>
                    <td style="border: 1px solid #ccc;">{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th style="border: 1px solid #ccc;">Nombre de participants</th>
                    <td style="border: 1px solid #ccc;">{{ reservation.nombreParticipants }}</td>
                </tr>
                <tr>
                    <th style="border: 1px solid #ccc;">Email de contact</th>
                    <td style="border: 1px solid #ccc;">{{ reservation.emailContact }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div style="text-align: center; margin-top: 20px;"> <!-- Div pour centrer les liens -->
        <a href="{{ path('app_reservation_index') }}" style="color: blue;"><i class="fas fa-list"></i> Retour à la liste</a>&nbsp;&nbsp; <!-- Ajout d'espaces entre les liens -->
        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" style="color: green;"><i class="fas fa-edit"></i> Modifier</a>
    </div>

    <div style="text-align: center; margin-top: 20px;"> <!-- Div pour centrer le bouton de suppression -->
        {{ include('reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}
