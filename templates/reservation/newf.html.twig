{% extends 'FooterHeader.html.twig' %}
{% block css %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .menu-details-container {
            max-width: 80%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f8f9fa;
            margin-top: 20px;
            font-family: Arial, sans-serif;
        }

        .form-group {
            margin-bottom: 20px; /* Add margin bottom to create space between labels and input fields */
        }
    </style>
{% endblock %}
  
    <style>
        .hero {
            background-color: #f8f9fa;
            padding: 50px 0;
            text-align: center;
        }
        
        .title {
            margin: 0 auto;
            width: 50%;
            text-align: center;
        }

        .containerr {
            margin-top: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            color: #fff;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        .buttons {
            margin-top: 30px;
            display: flex;
            justify-content: center; /* Center the buttons horizontally */
            align-items: center; /* Center the buttons vertically */
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .card-banner {
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-banner img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            transition: transform 0.3s;
        }

        .card-banner img:hover {
            transform: scale(1.1);
        }
    </style>
{% endblock %}

{% block body %}

<section class="food-menu" id="food-menu " style="align-items: center; margin-top: 10%;">
    <div class="container">
        <div class="menu-details-container">
            <div class="row justify-content-center "style="align-items: center; ">
                <h1>Ajouter Reservation</h1>
                {{ form_start(form, {'attr': {'class': 'reservation-form', 'name': 'reservationForm', 'enctype': 'multipart/form-data'}}) }}

                <div class="form-group">
                    <label for="date_reservation" class="reservation-label">Date</label>
                    {{ form_widget(form.date_reservation, {'attr': {'class': 'form-control reservation-date', 'placeholder' : 'Date' }}) }}
                    {{ form_errors(form.date_reservation,{'attr':{'class':'text-danger'}}) }}
                </div>

                <div class="form-group">
                    <label for="nombre_participants" class="reservation-label"></label>
                    {{ form_widget(form.nombre_participants, {'attr': {'class': 'form-control reservation-participants', 'placeholder' : 'Number of Participants' }}) }}
                    {{ form_errors(form.nombre_participants,{'attr':{'class':'text-danger'}}) }}
                </div>

                <div class="form-group">
                    <label for="email_contact" class="reservation-label"></label>
                    {{ form_widget(form.email_contact, {'attr': {'class': 'form-control reservation-email', 'placeholder' : 'Email' }}) }}
                    {{ form_errors(form.email_contact,{'attr':{'class':'text-danger'}}) }}
                </div>

                {{ form_row(form.user_id, {'attr': {'class': 'hidden'}, 'label_attr': {'class': 'hidden'}}) }}
                {{ form_row(form.evennement_id, {'attr': {'class': 'hidden'}, 'label_attr': {'class': 'hidden'}}) }}

                <div class="buttons">
                    <button type="submit" class="btn">{{ button_label|default('Save') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
