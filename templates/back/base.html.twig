<script>
    const currentTheme = localStorage.getItem('theme')

    if(!currentTheme){
        document.getElementById("core-link").href = "{{asset('back-assets/assets/vendor/css/core.css')}}"
        document.getElementById("theme-link").href = "{{asset('back-assets/assets/vendor/css/theme-default.css')}}"
    }

    if(currentTheme==='dark'){
        document.getElementById("core-link").href = "{{asset('back-assets/assets/vendor/css/core-dark.css')}}"
        document.getElementById("theme-link").href = "{{asset('back-assets/assets/vendor/css/theme-default-dark.css')}}"
    }

    if(currentTheme==='light'){
        document.getElementById("core-link").href = "{{asset('back-assets/assets/vendor/css/core.css')}}"
        document.getElementById("theme-link").href = "{{asset('back-assets/assets/vendor/css/theme-default.css')}}"
    }
</script>

<script>
    const switchThemeButton = document.getElementById("switch-theme");
    const coreLink = document.getElementById("core-link");
    const themeLink = document.getElementById("theme-link");

    switchThemeButton.addEventListener("click", function() {
        const currentTheme = localStorage.getItem('theme')
        if(!currentTheme){
            //theme is not set,switching to dark
            localStorage.setItem('theme','dark')
            coreLink.href = "{{asset('back-assets/assets/vendor/css/core-dark.css')}}"
            themeLink.href = "{{asset('back-assets/assets/vendor/css/theme-default-dark.css')}}"
            return;
        }

        if(currentTheme==='dark'){
            //theme is dark,switching to light
            localStorage.setItem('theme','light')
            coreLink.href = "{{asset('back-assets/assets/vendor/css/core.css')}}"
            themeLink.href = "{{asset('back-assets/assets/vendor/css/theme-default.css')}}"
            return;
        }

        if(currentTheme==='light'){
            //theme is light,switching to dark
            localStorage.setItem('theme','dark')
            coreLink.href = "{{asset('back-assets/assets/vendor/css/core-dark.css')}}"
            themeLink.href = "{{asset('back-assets/assets/vendor/css/theme-default-dark.css')}}"
        }
    });
</script>

